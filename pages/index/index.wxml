			<block wx:for="{{Tlist_all}}">
				<view class="list-card" bindtap="tapListCard" data-tid="{{item.tid}}">
					<view class="left"><image style="width:100%;height:100%;" src="/images/swiper/img.jpg"></image></view>
					<view class="right">
						<view style="font-size:38rpx;font-weight:600;">{{item.tname}}</view>
						<view style="font-size:26rpx;font-weight:100;color:#6F758C;">{{item.tqualification}}</view>
						<view style="font-size:26rpx;font-weight:100;color:#6F758C;">擅长:{{item.tspecialty}}</view>
						<view class="sign">
							<view class="sign-item"  wx:for="{{item.tsign}}">{{item.sign}}</view>
						</view>
					</view>
				</view>
			</block>
