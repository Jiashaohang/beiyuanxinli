<!-- 滚动导航标签页 -->
<i-tabs current="{{ current_scroll }}" scroll bindchange="handleChangeScroll">
	<i-tab key="tab1" title="推荐"></i-tab>
	<i-tab key="tab2" title="阅读"></i-tab>
	<i-tab key="tab3" title="活动"></i-tab>
